# Anthropic API Key (Required)
# Get your API key from https://console.anthropic.com/dashboard
ANTHROPIC_API_KEY=sk-ant-api03-examplekey12345678

# Mock API Mode (Optional)
# Set to 'true' to use mock responses instead of the actual API
# Useful for development and testing without using API credits
USE_MOCK_API=false

# Fallback to Mock API on Error (Optional)
# Set to 'true' to automatically use mock API if the real API fails
# This keeps the application running even when API calls are failing
FALLBACK_TO_MOCK_ON_ERROR=false

# Wayland Support (Optional)
# Set to 'false' if you encounter issues with Wayland
WAYLAND_ENABLED=true

# Qt Platform Settings (Optional)
# QT_SCALE_FACTOR=1.5
# QT_WAYLAND_DISABLE_WINDOWDECORATION=1
# QT_QPA_PLATFORM=xcb

# API Configuration (Optional)
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
# ANTHROPIC_MAX_TOKENS=1024

# Cache Settings (Optional)
# ENABLE_CACHING=true
# CACHE_TTL=3600 